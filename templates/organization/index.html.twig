{% extends 'base.html.twig' %}

{% block title %}{{ 'title.home'|trans }}{% endblock %}

{% block content %}

    <div class="panel panel-default">
        {# Bootstrap panel heading #}
        <div class="panel-heading">
            <h3 class="panel-title">Add organization</h3>
        </div>
        {% include 'organization/_form.html.twig' %}
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}</th>
                    <th>{{ 'label.description'|trans }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for index, organization in organizations %}
                    <tr>
                        <td>{{ organization.name }}</td>
                        <td>{{ organization.description }}</td>
                        <td>
                            <a href="{{ path('edit_organization', { 'id': index }) }}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="{{ path('delete_organization', { 'id': index }) }}" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'organization/_js.html.twig' %}
{% endblock %}
